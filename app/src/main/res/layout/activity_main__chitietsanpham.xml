<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAEDED"
    tools:context=".activity.Main_Chitietsanpham">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_chitiet"
        android:layout_width="match_parent"
        android:background="#FC0303"
        app:title="Chi Tiet San Pham"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <LinearLayout
           android:orientation="horizontal"
           android:weightSum="3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageview_chitiet"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp" />
           <LinearLayout
               android:layout_marginLeft="5dp"
               android:layout_weight="2"
               android:orientation="vertical"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/textview_chitiet_tensanpham"
                   android:text="ten san pham "
                   android:textSize="20dp"
                   android:textColor="#0F2FFD"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/textview_chitiet_giabandau"
                   android:text="gia "
                   android:textColor="#AD9292"
                   android:textSize="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/textview_chitiet_giahientai"
                   android:text="gia "
                   android:textColor="#f00000"
                   android:textSize="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center">
                   <Button
                       android:id="@+id/button_tru"
                       android:layout_margin="5dp"
                       android:text="-"
                       android:layout_width="30dp"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:id="@+id/textview_chitiet_soluong"
                       android:layout_margin="5dp"
                       android:text="1"
                       android:textSize="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <Button
                       android:id="@+id/button_cong"
                       android:text="+"
                       android:layout_margin="5dp"
                       android:layout_width="30dp"
                       android:layout_height="wrap_content" />
                   <Button
                       android:id="@+id/button_themvaogiohang"
                       android:layout_marginLeft="10dp"
                       android:text="them vao gio hang"
                       android:background="@drawable/button_themvaogiohang"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style=""/>
               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_margin="5dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.v7.widget.CardView
               app:cardCornerRadius="20dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ScrollView

                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   >
               <TextView

                   android:layout_margin="20dp"
                   android:id="@+id/textview_chitiet_gioithieu"
                   android:text="gioi thieu"
                   android:textSize="15dp"
                   android:textColor="#CEC7C7"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               </ScrollView>
           </android.support.v7.widget.CardView>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>